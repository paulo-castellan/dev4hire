<% if dev_profile.errors.any? %>
  <ul>
    <% dev_profile.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: dev_profile, local: true) do |f| %>

    <div class="mb-3">
      <%= f.label :full_name, class: "form-label" %>
      <%= f.text_field :full_name, class: "form-control", placeholder: "João Silva Carvalho" %>
    </div>

    <div class="mb-3">
      <%= f.label :social_name, class: "form-label"  %>
      <%= f.text_field :social_name, class: "form-control", placeholder: "Nome o qual você se identifica"  %>
    </div>

    <div class="mb-3">
      <%= f.label :expertise_id, class: "form-label"  %>
      <%= f.collection_select :expertise_id, @expertise, :id, :field_of_expertise %>
    </div>

    <span><%= t '.expertise_not_found' %></span>
    <%= link_to "#{t '.new_expertise'}", new_expertise_path %>

    <div class="mb-3">
      <%= f.label :date_of_birth %>
      <%= f.date_field :date_of_birth %>
    </div>

    <div class="mb-3">
      <%= f.label :academic_education, class: "form-label"  %>
      <%= f.text_field :academic_education, class: "form-control", placeholder: "Graduação em ciências da computação em 2020 pela UFBA"  %>
    </div>

    <div class="mb-3">
      <%= f.label :previous_experience, class: "form-label"  %>
      <%= f.text_field :previous_experience, class: "form-control", placeholder: "Estágio na Procuradoria Geral da União"  %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label"  %>
      <%= f.text_field :description, class: "form-control", placeholder: "Sou um brasiliense de 25 anos... "  %>
    </div>

    <div class="mb-3">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, accept: 'image/png, image/gif, image/jpeg' %>
    </div>
  <div><%= f.submit t '.update_profile'%></div>
  </dl>
<% end %>


